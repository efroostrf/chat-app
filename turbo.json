{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "start:dev": {
      "dependsOn": ["^db:build"],
      "cache": false
    },
    "db:build": {
      "cache": false
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "test:cov": {
      "dependsOn": ["^db:build"],
      "cache": false,
      "outputs": ["coverage/**"]
    }
  }
}
